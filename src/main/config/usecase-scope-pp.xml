<use-case-config name="mmd-scope-pp">
    <sensors>
        <sensor>
            <name>scope-pp</name>
            <primary>true</primary>
        </sensor>
        <sensor>
            <name>scope-sat-pp</name>
            <primary>false</primary>
        </sensor>
    </sensors>
    <dimensions>
        <dimension name="scope-pp">
            <nx>1</nx>
            <ny>1</ny>
        </dimension>
        <dimension name="scope-sat-pp">
            <nx>3</nx>
            <ny>3</ny>
        </dimension>
    </dimensions>

    <output-path>/media/jorge/scope/data/tests</output-path>

    <conditions>
        <spherical-distance>
            <max-pixel-distance-km>6.36</max-pixel-distance-km>
        </spherical-distance>
    </conditions>

    <screenings>

    </screenings>

</use-case-config>